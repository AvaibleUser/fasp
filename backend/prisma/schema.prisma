generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int           @id @default(autoincrement())
  nombre        String
  apellido      String
  username      String        @unique
  email         String        @unique
  password      String
  estado        EstadoUsuario
  rol           RolUsuario
  saldo         Float         @default(0)
  fechaCreacion DateTime      @default(now())
  cuentas       Cuenta[]
}

model Cuenta {
  id                     Int           @id @default(autoincrement())
  estado                 EstadoCuenta
  nombre                 String
  tipo                   TipoFinanza
  fechaCreacion          DateTime      @default(now())
  usuarioId              Int
  usuario                Usuario       @relation(fields: [usuarioId], references: [id])
  transaccionesEnviadas  Transaccion[] @relation(name: "enviadas")
  transaccionesRecibidas Transaccion[] @relation(name: "recibidas")
}

model Transaccion {
  id              Int               @id @default(autoincrement())
  tipo            TipoTransaccion
  descripcion     String?
  monto           Float
  estado          EstadoTransaccion
  errores         String?
  fecha           DateTime          @default(now())
  cuentaOrigenId  Int?
  cuentaOrigen    Cuenta?           @relation(name: "enviadas", fields: [cuentaOrigenId], references: [id])
  cuentaDestinoId Int?
  cuentaDestino   Cuenta?           @relation(name: "recibidas", fields: [cuentaDestinoId], references: [id])
}

enum EstadoUsuario {
  ACTIVO
  INACTIVO
  BLOQUEADO
}

enum RolUsuario {
  ADMIN
  USER
}

enum EstadoCuenta {
  ACTIVA
  INACTIVA
  BLOQUEADA
}

enum EstadoTransaccion {
  EXITOSA
  FALLIDA
  PENDIENTE
}

enum TipoFinanza {
  BANCO
  CREDITO
}

enum TipoTransaccion {
  PAGO
  RETIRO
  TRANSFERENCIA
}
