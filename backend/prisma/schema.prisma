generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                     Int           @id @default(autoincrement())
  nombre                 String
  apellido               String
  username               String        @unique
  email                  String        @unique
  password               String
  estado                 EstadoUsuario @default(ACTIVO)
  rol                    RolUsuario    @default(USER)
  saldo                  Float         @default(0)
  fechaCreacion          DateTime      @default(now())
  metodosPago            MetodoPago[]
  transaccionesEnviadas  Transaccion[] @relation(name: "enviadas")
  transaccionesRecibidas Transaccion[] @relation(name: "recibidas")
}

model MetodoPago {
  id            Int           @id @default(autoincrement())
  numero        Int
  estado        EstadoPago
  tipo          TipoPago
  fechaCreacion DateTime      @default(now())
  usuarioId     Int
  usuario       Usuario       @relation(fields: [usuarioId], references: [id])
  transacciones Transaccion[]
}

model Transaccion {
  id           Int               @id @default(autoincrement())
  monto        Float
  estado       EstadoTransaccion @default(PENDIENTE)
  errores      String?
  fecha        DateTime          @default(now())
  emisorId     Int
  emisor       Usuario           @relation(name: "enviadas", fields: [emisorId], references: [id])
  receptorId   Int
  receptor     Usuario           @relation(name: "recibidas", fields: [receptorId], references: [id])
  metodoPagoId Int?
  metodoPago   MetodoPago?       @relation(fields: [metodoPagoId], references: [id])
}

enum EstadoUsuario {
  ACTIVO
  INACTIVO
  BLOQUEADO
}

enum RolUsuario {
  ADMIN
  USER
}

enum EstadoPago {
  ACTIVA
  INACTIVA
}

enum EstadoTransaccion {
  EXITOSA
  FALLIDA
  PENDIENTE
}

enum TipoPago {
  BANCO
  CREDITO
}
